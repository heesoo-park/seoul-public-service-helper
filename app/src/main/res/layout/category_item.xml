<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:id="@+id/iv_smallVideoItems"
    android:layout_marginStart="15dp">


    <ImageView
        android:id="@+id/iv_smallImage"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_isReservationAvailable"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/register"
        android:gravity="center"
        android:text="예약가능"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_smallImage" />

    <TextView
        android:id="@+id/tv_placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center"
        android:text="잠실제3축구장"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_smallImage" />

    <TextView
        android:id="@+id/tv_payType"
        android:layout_width="51dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/pay"
        android:gravity="center_horizontal"
        android:text="유료"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_placeName" />

    <TextView
        android:id="@+id/tv_areaName"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="송파구"
        android:textColor="#777777"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_payType" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="후기 12개"
        android:textColor="#777777"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_payType" />
</androidx.constraintlayout.widget.ConstraintLayout>