<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_smallVideoItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">


    <ImageView
        android:id="@+id/iv_ctImage"
        android:layout_width="143dp"
        android:layout_height="95dp"
        android:background="@drawable/background_radius_10dp_828282"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_ctBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_ctImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/tv_ctPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:gravity="start"
            android:maxLines="3"
            android:text="여기는 장소 이름이 들어가는곳"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_ctBox"
            app:layout_constraintTop_toTopOf="@+id/tv_ctBox" />

        <TextView
            android:id="@+id/tv_ctNotFree"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_white_with_rounded_stroke"
            android:gravity="center"
            android:text="유료"
            android:textColor="#737373"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_ctFree"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_pointcolor_with_rounded"
            android:gravity="center"
            android:text="무료"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_ctReservationEnd"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_white_with_rounded_stroke"
            android:gravity="center"
            android:text="예약 종료"
            android:textColor="#737373"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_ctBox" />


        <TextView
            android:id="@+id/tv_isReservationAvailable"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_white_with_f8496c_stroke"
            android:gravity="center"
            android:text="예약가능"
            android:textColor="#F8496C"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>