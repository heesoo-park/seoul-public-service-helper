<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_home_recent_window"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/background_radius_12dp"
    android:clipToOutline="true"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/iv_home_recent_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_service_item_layout"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_recent_service_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="서비스 이름"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_home_recent_area_minclassnm"
        app:layout_constraintStart_toEndOf="@id/iv_home_recent_img"
        app:layout_constraintTop_toTopOf="@id/iv_home_recent_img" />
    
    <TextView
        android:id="@+id/tv_home_recent_area_minclassnm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="지역명 - 소분류명"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_recent_service_name"
        app:layout_constraintStart_toStartOf="@id/tv_home_recent_service_name"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_home_recent_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_with_rounded_stroke"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="유료"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_recent_img"
        app:layout_constraintStart_toEndOf="@id/iv_home_recent_img"
        />

    <TextView
        android:id="@+id/tv_home_recent_svcstatnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_with_rounded_stroke"
        app:layout_constraintStart_toEndOf="@id/tv_home_recent_pay"
        app:layout_constraintTop_toTopOf="@id/tv_home_recent_pay"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_recent_pay"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="접수중"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>