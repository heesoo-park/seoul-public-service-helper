<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.category.CategoryFragment">
    <include
        layout="@layout/activity_category"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="박물관"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_isReservationFilter"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="예약가능"
        android:textColor="#F8496C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />


    <TextView
        android:id="@+id/tv_isFree"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="무료"
        android:textColor="#F8496C"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_isReservationFilter"
        app:layout_constraintEnd_toStartOf="@+id/tv_isReservationFilter"
        app:layout_constraintTop_toTopOf="@+id/tv_isReservationFilter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_isReservationFilter"
        tools:listitem="@layout/category_item" />


</androidx.constraintlayout.widget.ConstraintLayout>